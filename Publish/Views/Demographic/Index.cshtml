@model IEnumerable<MVCDemo.Models.Demographic>

@{
    ViewBag.Title = "Index";
}

<h2>Members</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-sm btn-primary" })
</p>
@if (Model.Count() > 0)
{
    <div class="table-responsive">

        <table id="memberTable" class="table table-striped table-hover table-condensed table-bordered">
            <thead>
                <tr class="bg-primary">
                    <th>Action</th>
                    <th>
                        @Html.DisplayNameFor(m => m.Member.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.HomeContact.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.HomeContact.Email)
                    </th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="no-wrap">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Member.MemberID }, new { @class = "btn btn-xs btn-primary" })
                            @Html.ActionLink("Details", "Details", new { id = item.Member.MemberID }, new { @class = "btn btn-xs btn-primary" })

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Member.FullName)
                        </td>
                        <td style="white-space:normal;">
                            @Html.DisplayFor(modelItem => item.HomeContact.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HomeContact.Email)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="loader"></div>
}
else
{
    <h4>No Member Found.</h4>
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#menuDemographic').addClass('active')

        //$('#memberTable').dataTable({
        //    "info": false,
        //    "pagingType": "numbers",
        //    "filter": false,
        //    "lengthChange": false,
        //    "scrollX": false


        //})

        $(window).load(function () {
            $(".loader").fadeOut("slow");
        })
    });

</script>
