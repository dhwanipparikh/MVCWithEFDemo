@model HandleErrorInfo
@using MVCDemo.Service;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body >
    <hgroup class="text-danger">
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
        @{
            ErrorLoggerService logService = new ErrorLoggerService();
            logService.LogError(@Model.Exception, @Model.ControllerName, @Model.ActionName);
        }
    </hgroup>
</body>
</html>
